{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
